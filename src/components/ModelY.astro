---
import Section from "./Section.astro";
import DoubleButton from "./DoubleButton.astro";
import Disclaimer from "./Disclaimer.astro";
---

<Section title="Model Y" price="Lease starting at $379/mo*" color="light">
    <div slot="footer">
        <DoubleButton
            leftButtonText="Custom Order"
            leftButtonColor="light"
            rightButtonText="Demo Drive"
            rightButtonColor="dark"
        />
        <Disclaimer
            text="*Excludes taxes and fees with price subject to change. Available in select states."
            details="See Details"
            color="light"
        />
    </div>
    <video
        slot="background"
        class="object-center object-cover h-full w-full"
        src="/videos/Homepage-Model-Y.mp4"
        autoplay
        muted
        loop></video>
</Section>
